{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug - List Configs",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/vblogger_main.py",
            "args": [
                "--list-configs"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug - Table Rocks Config",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/vblogger_main.py",
            "args": [
                "--config",
                "table_rocks_20250726_config"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug - Harriman Config",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/vblogger_main.py",
            "args": [
                "--config",
                "harriman_20250803_config"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug - Testing Mode",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/vblogger_main.py",
            "args": [
                "--config",
                "table_rocks_config",
                "--testing"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug - Create Config",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/create_config.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug - Config Loader",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug_config_loader.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}